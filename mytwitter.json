  "results": {
      "first_name": "Mohini",
      "last_name": "Sindhu",
      "email": "mohini.sindhu15@gmail.com",
      "username": "mohini15"
    }
}


response JSON: <401> unsuccessfull login
{
  "error": "Username and Password not Matched"
}


